@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Attach click event to the "Edit" links
            $(".edit-link").on("click", function (e) {
                e.preventDefault();

                // Find the corresponding post container
                var postContainer = $(this).closest(".post");

                // Get the post ID
                var postId = postContainer.data("post-id");

                // Find the post content element
                var postContent = postContainer.find(".post-content");

                // Get the current post content
                var currentContent = postContent.text().trim();

                // Replace the post content with a textarea for editing
                postContent.html('<textarea class="form-control">' + currentContent + '</textarea>');

                // Append "Save" and "Cancel" buttons
                postContent.append('<button class="btn btn-primary save-button">Save</button>');
                postContent.append('<button class="btn btn-secondary cancel-button">Cancel</button>');

                // Attach click event to the "Save" button
                postContent.find(".save-button").on("click", function () {
                    // Get the edited content
                    var editedContent = postContent.find("textarea").val();

                    // Perform AJAX request to update the post content
                    $.ajax({
                        url: "/Post/UpdatePost", // Change the URL to your actual update action
                        type: "POST",
                        data: { postId: postId, editedContent: editedContent },
                        success: function () {
                            // Update the post content with the edited content
                            postContent.html(editedContent);
                        }
                    });
                });

                // Attach click event to the "Cancel" button
                postContent.find(".cancel-button").on("click", function () {
                    // Restore the original content
                    postContent.html(currentContent);
                });
            });
        });

        $(document).ready(function () {
            // Attach click event to the "Delete" links
            $(".delete-link").on("click", function (e) {
                e.preventDefault();

                // Find the corresponding post container
                var postContainer = $(this).closest(".post");

                // Get the post ID
                var postId = postContainer.data("post-id");

                // Perform AJAX request to delete the post
                $.ajax({
                    url: "/Post/DeletePost", // Change the URL to your actual delete action
                    type: "POST",
                    data: { postId: postId },
                    success: function () {
                        // Remove the post container from the DOM
                        postContainer.remove();
                    }
                });
            });
        });
    </script>
