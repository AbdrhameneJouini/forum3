    <div class="container">
        <h1>
        @Model?.MainPost.Title
        </h1>
        <div class="post">
            <div class="post-header">
                <img alt="Avatar" src="avatar1.jpg" />
                <div class="post-author">
                @Model?.MainPost.CreatorUser.UserName
                </div>
            </div>
            <div class="post-content">
                @Model?.MainPost.Message
            </div>
            <div class="post-footer">
                <div class="post-date">
                    Posted on @Model?.MainPost.DateCreationMessage.ToString();

                </div>
                <div class="post-actions">
                    <a href="#">
                        Reply
                    </a>
                    <a href="#">
                        Like
                    </a>
                    <a href="#">
                        Report
                    </a>
                </div>
            </div>
        </div>
        
        
        
        
       @*  SHOW REPLIES *@
        
        
       
      @foreach (var reply in Model?.Replies)
        {



            <div class="post">
                <div class="post-header">
                    <img alt="Avatar" src="avatar2.jpg"/>
                    <div class="post-author">
                        Posted by: @(reply?.CreatorUser?.UserName ?? "Unknown User")

                    </div>
                </div>
                <div class="post-content">
                    @reply?.Message
                    </div>
                <div class="post-footer">
                    <div class="post-date">
                    Posted on @reply?.DateCreationMessage.ToString();
                    </div>
                    <div class="post-actions">
                        <a href="#">
                            Reply
                        </a>
                        <a href="#">
                            Like
                        </a>
                        <a href="#">
                            Report
                        </a>
                    </div>
                </div>
            </div>

        }
        @*  SHOW REPLIES *@
        
        
        

        <div class="reply-form">
                <h3>
                    Leave a Reply
                </h3>
        <form id="replyForm" asp-controller="Post" asp-action="reply" asp-route-id="@Model?.MainPost.PostID">
                 
            <div class="form-group">
                <label for="message">
                    Message:
                </label>
                <textarea class="form-control" id="message" name="message" placeholder="Enter your message" required="true"></textarea>
            </div>
                    <button class="submit-btn" type="submit">
                        Submit
                    </button>
                </form>
            </div>
        
