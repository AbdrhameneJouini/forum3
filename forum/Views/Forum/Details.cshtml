@model forum.Models.Forum

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Forum</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateCreation)
        </dd>
    </dl>
</div>

<div>
    <h4>Themes</h4>
    <hr />
    @foreach (var theme in Model.Themes)
    {
        <dl class="row">
            <dt class="col-sm-2">
                Theme
            </dt>
            <dd class="col-sm-10">
                @theme.Titre
            </dd>
        </dl>
    }
</div>
<div>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ForumID">Edit |</a>
        <a asp-action="Delete" asp-route-id="@Model.ForumID">Delete |</a>


    }

    <a asp-action="Index">Back to List</a>
</div>
