@model forum.ViewModels.ForumViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Forum</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ForumID" />
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
   
            <div class="form-group">
                <label asp-for="SelectedThemes" class="control-label">Forum Categories</label>
                <select asp-for="SelectedThemes" class="form-control" asp-items="Model.ThemesList" multiple>
                </select>
                <span asp-validation-for="SelectedThemes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}